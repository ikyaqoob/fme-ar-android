<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.safe.fmear">

    <!-- Use the OpenGL ES 2.0 API -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ARActivity">

            <!-- TODO: For development purpose, the ARActivity screen is being used as the
                 launcher. If we have a separate launcher activity in the future, we should
                 remove the launcher intent filter. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- TODO: The following intent filter is not correct. It basically allows all files
                 to be opened in the ARActivity, even files other than .fmear. We need to
                 fix this. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:mimeType="application/*" android:pathPattern=".*\\.fmear"/>
            </intent-filter>

        </activity>
    </application>

</manifest>